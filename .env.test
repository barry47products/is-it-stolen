# Test Environment Configuration
# This file is used by pytest to isolate test environment from development

# Environment
NODE_ENV=test

# Server Configuration
PORT=8001
HOST=0.0.0.0

# WhatsApp Business Cloud API (test placeholders)
WHATSAPP_PHONE_NUMBER_ID=test_phone_number_id
WHATSAPP_ACCESS_TOKEN=test_access_token
WHATSAPP_BUSINESS_ACCOUNT_ID=test_business_account_id
WHATSAPP_WEBHOOK_VERIFY_TOKEN=test_webhook_verify_token
WHATSAPP_APP_SECRET=test_app_secret

# Database (PostgreSQL with PostGIS) - same as dev for integration tests
DATABASE_URL=postgresql://admin:admin_password@localhost:5433/isitstolen

# Redis
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Session Configuration
SESSION_TTL=86400
CONVERSATION_TIMEOUT=600

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=10

# Media Storage
MEDIA_STORAGE_PATH=./test_uploads
MEDIA_MAX_SIZE_MB=10

# Logging
LOG_LEVEL=debug

# Testing
ENVIRONMENT=test
DEBUG=true
